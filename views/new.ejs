<% include ./partials/header %>
    <div class="container">
        <h2 style="text-align: center; margin: 20px auto;">Create a new Campground</h2>
        <div style="width: 30%; margin: 40px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="image url">
                </div>
                <div class="form-group">
                    <input class="btn btn-lg btn-primary btn-block" type="submit" name="" id="">
                </div>
            </form>
            <a class="btn btn-outline-secondary btn-sm" href="/campgrounds">Back</a>
        </div>
    </div>
    <% include ./partials/footer %>